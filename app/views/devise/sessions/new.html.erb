<body class="loginpage">
<div class="contents">
<h2>Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :"E-Mail", class: "inputlabel"%><br>
    <%= f.email_field :email, autofocus: true , class: "inputarea", placeholder: "メールアドレス"%>
  </div>

  <div class="field">
    <%= f.label :"Password" ,class: "inputlabel"%><br>
    <%= f.password_field :password, autocomplete: "off", class: "inputarea" ,:placeholder => "パスワード"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="boxfield">
      <%= f.label :"パスワードを記憶する", class: "checkboxplace" %>
    <%= f.check_box :remember_me, class: "checkbox" %>
        </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Login", class: "button" %>
  </div>
<% end %>
</div>
