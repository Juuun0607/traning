            </div>
            <div class="field">
              <%= f.label :link3, "商品リンク" %><br>
              <%= f.text_field :link3, class: "train_form", placeholder: "商品リンク" %>
            </div>

            <div class="actions field">
              <%= f.submit "トレーニンググッズを投稿する", class: "button_style" %>
            </div>
          <% end %>
        </div>
      </ul>
    </section>
